<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--app底部导航栏按钮样式（RadioBox按钮）-->
    <style name="AppBottomRadioBoxStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/bottom_tab_tv_color_selector</item>
        <item name="android:textSize">13sp</item>
    </style>

<!--tab 按钮样式-->
    <style name="TabButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/tab_tv_color_selector</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@drawable/tab_bg_selector</item>
    </style>


</resources>
